@model NguyenDinhHoangLan_BaiTap5.Models.BannerModel

@{
    ViewBag.Title = "Banner";
    Layout = "~/Views/Shared/_ Bt5Layout.cshtml";
}

<link href="~/Content/RegisterStyle.css" rel="stylesheet" type="text/css" />

@using (Html.BeginForm("Banner", "Banner", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="box row">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div style="width: 100%; text-align:center; margin-bottom: 1.5em;"><h4>THAY ĐỔI BANNER</h4></div>
        <hr />

        <div class="col-lg-4">@Html.LabelFor(model => model.banner, htmlAttributes: new { @class = "control-label float-right-lg" })</div>
        <div class="col-lg-8">
            @Html.TextBoxFor(model => model.banner, new { type = "file" })<br />
            @Html.ValidationMessageFor(model => model.banner, "", new { @class = "text-danger" })
        </div>

        <div class="col-lg-4"></div>
        <div class="col-lg-8">
            <input type="submit" value="Thay đổi" class="btn btn-default" />
        </div>
    </div>    
}