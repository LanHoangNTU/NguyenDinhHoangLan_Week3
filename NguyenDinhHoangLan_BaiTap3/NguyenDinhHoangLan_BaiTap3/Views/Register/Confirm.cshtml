@model NguyenDinhHoangLan_BaiTap3.Models.EmpModel

@{
    ViewBag.Title = "Confirm";
}

<link href="~/Content/Style.css" rel="stylesheet" type="text/css" />

@using (Html.BeginForm("Confirm", "Register", FormMethod.Post))
{
<div class="row box">
    <div style="width: 100%; text-align:center; margin-bottom: 1.5em;"><h4>THÔNG TIN THÀNH VIÊN ĐÃ ĐĂNG KÝ</h4></div>
    <hr />
    <div class="col-lg-5"><img src="@Model.Avatar" /></div>

    <div class="col-lg-7 row">
        <div class="col-lg-4">Mã nhân viên:</div>
        <div class="col-lg-8">@Model.EmpID</div>
        <br />
        <div class="col-lg-4">Họ tên:</div>
        <div class="col-lg-8">@Model.Name</div>
        <br />
        <div class="col-lg-4">Ngày sinh:</div>
        <div class="col-lg-8">@Model.DateOfBirth.ToShortDateString()</div>
        <br />
        <div class="col-lg-4">Email:</div>
        <div class="col-lg-8">@Model.Email</div>
        <br />
        <div class="col-lg-4">Mật khẩu:</div>
        <div class="col-lg-8">@Model.Password</div>
        <br />
        <div class="col-lg-4">Đơn vị:</div>
        <div class="col-lg-8">@Model.Department</div>
        <br />
        <div class="col-lg-4"><a href="@Url.Action("Index", "Register")">Quay lại</a></div>
    </div>

</div>
}