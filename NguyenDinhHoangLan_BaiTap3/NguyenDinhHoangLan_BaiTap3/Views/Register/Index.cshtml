@model NguyenDinhHoangLan_BaiTap3.Models.EmpModel

@{
    ViewBag.Title = "Index";
}

<link href="~/Content/Style.css" rel="stylesheet" type="text/css" />

@using (Html.BeginForm("Index", "Register", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="box row">
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div style="width: 100%; text-align:center; margin-bottom: 1.5em;"><h4>THÔNG TIN THÀNH VIÊN ĐĂNG KÝ</h4></div>
        <hr />
        
            <div class="col-lg-4 center-label">@Html.LabelFor(model => model.EmpID)</div>
            <div class="col-lg-8">
                @Html.TextBoxFor(model => model.EmpID, new { htmlAttributes = new { @class = "" } })<br />
                @Html.ValidationMessageFor(model => model.EmpID, "", new { @class = "text-danger" })
            </div>
        
            <div class="col-lg-4 center-label">@Html.LabelFor(model => model.Name)</div>
            <div class="col-lg-8">
                @Html.TextBoxFor(model => model.Name, new { htmlAttributes = new { @class = "" } })<br />
                @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
            </div>
        
            <div class="col-lg-4 center-label">@Html.LabelFor(model => model.DateOfBirth)</div>
            <div class="col-lg-8">
                @Html.TextBoxFor(model => model.DateOfBirth, new { htmlAttributes = new { @class = "" } })<br />
                @Html.ValidationMessageFor(model => model.DateOfBirth, "", new { @class = "text-danger" })
            </div>
        
            <div class="col-lg-4 center-label">@Html.LabelFor(model => model.Email)</div>
            <div class="col-lg-8">
                @Html.TextBoxFor(model => model.Email, new { htmlAttributes = new { @class = "" } })<br />
                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
            </div>

            <div class="col-lg-4 center-label">@Html.LabelFor(model => model.Password)</div>
            <div class="col-lg-8">
                @Html.TextBoxFor(model => model.Password, new { htmlAttributes = new { @class = "" } })<br />
                @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
            </div>

            <div class="col-lg-4 center-label">@Html.LabelFor(model => model.Department)</div>
            <div class="col-lg-8">
                @Html.TextBoxFor(model => model.Department, new { htmlAttributes = new { @class = "" } })<br />
                @Html.ValidationMessageFor(model => model.Department, "", new { @class = "text-danger" })
            </div>

            <div class="col-lg-4 center-label">@Html.LabelFor(model => model.Avatar)</div>
            <div class="col-lg-8">
                @Html.TextBoxFor(model => model.Avatar, new { type = "file"})                    
                @Html.ValidationMessageFor(model => model.Avatar, "", new { @class = "text-danger", id = "custom-upload" })
            </div>

            <div class="col-lg-4"></div>
            <div class="col-md-8">
                <input type="submit" value="Đăng ký" class="my-btn" />
            </div>
        
    </div>
}